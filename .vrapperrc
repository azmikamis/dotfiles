set nocompatible
set backspace=indent,eol,start
" Leader shortcuts
inoremap jk <esc>
" Colours
set background=dark
syntax on
" Spaces and tabs
set tabstop=4
set softtabstop=4
set expandtab
set shiftwidth=4
" UI config
set number
set ruler
filetype indent on
set wildmenu
set showmatch
" Searching
set incsearch
set hlsearch
" Indenting
set autoindent
set smartindent
" Folding
set foldenable
set foldlevelstart=10
set foldnestmax=10
nnoremap <space> za
set foldmethod=indent
" Movement
nnoremap B ^
nnoremap E $
nnoremap ^ <nop>
nnoremap $ <nop>
nnoremap gV `[v`]
